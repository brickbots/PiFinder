#!/usr/bin/env bash
set -e
if [[ ! -d "/home/mike/dev/amateur_astro/myPiFinder/wt-boot-speed" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/mike/dev/amateur_astro/myPiFinder/wt-boot-speed")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/mike/dev/amateur_astro/myPiFinder/wt-boot-speed" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/mike/dev/amateur_astro/myPiFinder/wt-boot-speed/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/mike/dev/amateur_astro/myPiFinder/wt-boot-speed/.envrc" "/home/mike/dev/amateur_astro/myPiFinder/wt-boot-speed/.direnv"/*.rc
